<?xml version="1.0"?>
<!DOCTYPE service_bundle SYSTEM "/usr/share/lib/xml/dtd/service_bundle.dtd.1">
<!--   Manifest-file for sshguard,put this file in
       /var/svc/manifest/network/sshguard.xml
       and run #svccfg import /var/svc/manifest/network/sshguard.xml
       Fixed by Yuri Voinov (C) 2007,2025 -->
<service_bundle type='manifest' name='sshguard'>

<service
        name='network/sshguard'
        type='service'
        version='1'>

        <create_default_instance enabled='false' />

        <single_instance />

        <dependency name='fs-local'
                grouping='require_all'
                restart_on='none'
                type='service'>
                <service_fmri
                        value='svc:/system/filesystem/local' />
        </dependency>

        <dependency name='net-loopback'
                grouping='require_all'
                restart_on='none'
                type='service'>
                <service_fmri value='svc:/network/loopback' />
        </dependency>

        <dependency name='net-physical'
                grouping='require_all'
                restart_on='none'
                type='service'>
                <service_fmri value='svc:/network/physical' />
        </dependency>

        <dependency name='sshguard_config_data'
                grouping='require_all'
                restart_on='refresh'
                type='path'>
                <service_fmri value='file://localhost/usr/local/etc/sshguard.conf' />
        </dependency>

	<dependency name='OpenSSH'
		grouping='optional_all'
		restart_on='refresh'
		type='service'>
                <service_fmri value='svc:/network/ossh:default' />
	</dependency>

        <dependent
            name='multi-user-server'
            restart_on='none'
            grouping='optional_all'>
            <service_fmri value='svc:/milestone/multi-user-server'/>
        </dependent>

        <exec_method
                type='method'
                name='start'
                exec='/lib/svc/method/init.sshguard %m'
                timeout_seconds='20'/>

        <exec_method
                type='method'
                name='stop'
                exec=':kill'
                timeout_seconds='20' />

        <exec_method
                type='method'
                name='restart'
                exec='/lib/svc/method/init.sshguard %m'
                timeout_seconds='40' />

        <property_group name='startd'
                type='framework'>
                <!-- sub-process core dumps shouldn't restart session -->
                <propval name='ignore_error'
                    type='astring' value='core,signal' />
        </property_group>

        <property_group name='general' type='framework'>
                <!-- to start stop sshguard -->
                <propval name='action_authorization' type='astring'
                        value='solaris.smf.manage' />
        </property_group>

        <stability value='Unstable' />

        <template>
                <common_name>
                        <loctext xml:lang='C'>
                        sshguard service
                        </loctext>
                </common_name>
        </template>

</service>

</service_bundle>